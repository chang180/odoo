<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="payment_provider_form_newebpay" model="ir.ui.view">
        <field name="name">payment.provider.form.newebpay</field>
        <field name="model">payment.provider</field>
        <field name="inherit_id" ref="payment.payment_provider_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='code']" position="after">
                <field name="newebpay_merchant_id" attrs="{'invisible': [('code', '!=', 'newebpay')], 'required': [('code', '=', 'newebpay')]}"/>
                <field name="newebpay_hash_key" attrs="{'invisible': [('code', '!=', 'newebpay')], 'required': [('code', '=', 'newebpay')]}"/>
                <field name="newebpay_hash_iv" attrs="{'invisible': [('code', '!=', 'newebpay')], 'required': [('code', '=', 'newebpay')]}"/>
                <field name="newebpay_test_mode" attrs="{'invisible': [('code', '!=', 'newebpay')]}"/>
            </xpath>
        </field>
    </record>
</odoo>

