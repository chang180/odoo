[options]
; 這是 Odoo 配置檔案範例
; 複製此檔案為 odoo.conf 並修改相應的值

; 資料庫設定
db_host = db
db_port = 5432
db_user = odoo
db_password = odoo
; db_name = odoo  ; 註解掉此選項以允許資料庫管理頁面顯示所有資料庫
db_maxconn = 64
db_template = template0

; 伺服器設定
http_port = 8069
http_interface = 0.0.0.0

; 日誌設定
logfile = /var/log/odoo/odoo.log
log_level = info
log_handler = :INFO

; 開發模式設定（自動重新載入模組）
dev_mode = reload

; 模組路徑
addons_path = /mnt/extra-addons,/usr/lib/python3/dist-packages/odoo/addons

; 管理員密碼（用於建立資料庫）
; 注意：此密碼會在使用時自動加密
; 建議使用環境變數或設定為強密碼
admin_passwd = admin

; 資料庫管理（允許建立/刪除資料庫）
list_db = True
dbfilter = .*  ; 顯示所有資料庫（使用 dbfilter 而不是 db_filter）

; 其他設定
workers = 0
max_cron_threads = 2
limit_time_cpu = 600
limit_time_real = 1200
limit_time_real_cron = -1

